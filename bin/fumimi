#!/usr/bin/env ruby

require "bundler/setup"
require "optparse"
require "fumimi"

def parse_options
  options = {
    console: false,
    feed: false
  }

  OptionParser.new do |opts|
    opts.on("-c", "--console", "open ruby console") { options[:console] = true }
    opts.on("-f", "--feed", "update feeds") { options[:feed] = true }
    opts.on("-h", "--help", "display this help and exit") do
      puts opts
      exit 1
    end

    begin
      opts.parse!
      yield(options)
    rescue OptionParser::ParseError => error
      STDERR.puts(error)
      STDERR.puts "Try 'fumimi --help' for more information."
      exit 1
    end
  end
end

def main(options)
  log = Logger.new(STDERR)
  log.level = Logger::DEBUG

  fumimi = Fumimi.new({
    server_id: ENV["DISCORD_SERVER_ID"].to_i,
    client_id: ENV["DISCORD_CLIENT_ID"],
    token: ENV["DISCORD_TOKEN"],
    log: log,
  })

  %w[INT TERM].each do |signal|
    trap signal do
      STDERR.puts "SIG#{signal} received, initiating shutdown..."
      fumimi.initiate_shutdown!
    end
  end

  if options[:console]
    fumimi.pry
  elsif options[:feed]
    fumimi.run_feeds(comment_feed: "comment-feed", upload_feed: "upload-feed", forum_feed: "forum-feed", error_channel: "testing")
  else
    fumimi.run_commands
  end
end

parse_options do |opts|
  main(opts)
end
